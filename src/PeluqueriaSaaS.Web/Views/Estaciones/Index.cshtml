@model List<VentaDetalle>
@using PeluqueriaSaaS.Domain.Entities
@{
    ViewData["Title"] = "EstaciÃ³n de Trabajo";
    var estados = ViewBag.Estados as List<PeluqueriaSaaS.Domain.Entities.EstadoServicio>;
    var empleados = ViewBag.Empleados as List<PeluqueriaSaaS.Domain.Entities.Empleado>;
}

<div class="container-fluid mt-3">
    <h2>ðŸ”§ EstaciÃ³n de Trabajo</h2>
    
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mt-4">
        @if (Model.Any())
        {
            @foreach (var grupo in Model.GroupBy(vd => vd.VentaId))
            {
                var venta = grupo.First().Venta;
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-user"></i> @venta.Cliente.NombreCompleto
                            </h5>
                            <small>Venta #@venta.NumeroVenta</small>
                        </div>
                        <div class="card-body">
                            @foreach (var detalle in grupo)
                            {
                                var estadoActual = estados.FirstOrDefault(e => e.Id == detalle.EstadoServicioId);
                                <div class="border rounded p-2 mb-2" style="border-left: 4px solid @estadoActual?.Color !important;">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>@detalle.NombreServicio</strong>
                                            <br/>
                                            <span class="badge" style="background-color: @estadoActual?.Color">
                                                @estadoActual?.Nombre
                                            </span>
                                            @if (detalle.EmpleadoAsignadoId.HasValue)
                                            {
                                                var empleado = empleados.FirstOrDefault(e => e.Id == detalle.EmpleadoAsignadoId);
                                                <small class="text-muted">(@empleado?.Nombre)</small>
                                            }
                                        </div>
                                        <div>
                                            @if (detalle.EstadoServicioId == 1) // Pendiente
                                            {
                                                <form method="post" action="@Url.Action("ActualizarEstado", "Estaciones")" class="d-inline">
                                                    <input type="hidden" name="ventaDetalleId" value="@detalle.VentaDetalleId" />
                                                    <input type="hidden" name="nuevoEstadoId" value="2" />
                                                    <select name="empleadoId" class="form-select form-select-sm mb-1" required>
                                                        <option value="">Seleccionar...</option>
                                                        @foreach (var emp in empleados)
                                                        {
                                                            <option value="@emp.Id">@emp.Nombre</option>
                                                        }
                                                    </select>
                                                    <button type="submit" class="btn btn-sm btn-warning w-100">
                                                        <i class="fas fa-play"></i> Iniciar
                                                    </button>
                                                </form>
                                            }
                                            else if (detalle.EstadoServicioId == 2) // En Proceso
                                            {
                                                <form method="post" action="@Url.Action("ActualizarEstado", "Estaciones")" class="d-inline">
                                                    <input type="hidden" name="ventaDetalleId" value="@detalle.VentaDetalleId" />
                                                    <input type="hidden" name="empleadoId" value="@detalle.EmpleadoAsignadoId" />
                                                    <div class="btn-group-vertical">
                                                        <button type="submit" name="nuevoEstadoId" value="3" class="btn btn-sm btn-success">
                                                            <i class="fas fa-check"></i> Completar
                                                        </button>
                                                        <button type="submit" name="nuevoEstadoId" value="5" class="btn btn-sm btn-info">
                                                            <i class="fas fa-pause"></i> Pausar
                                                        </button>
                                                    </div>
                                                </form>
                                            }
                                            else if (detalle.EstadoServicioId == 5) // Pausado
                                            {
                                                <form method="post" action="@Url.Action("ActualizarEstado", "Estaciones")" class="d-inline">
                                                    <input type="hidden" name="ventaDetalleId" value="@detalle.VentaDetalleId" />
                                                    <input type="hidden" name="nuevoEstadoId" value="2" />
                                                    <input type="hidden" name="empleadoId" value="@detalle.EmpleadoAsignadoId" />
                                                    <button type="submit" class="btn btn-sm btn-warning">
                                                        <i class="fas fa-play"></i> Reanudar
                                                    </button>
                                                </form>
                                            }
                                            else if (detalle.EstadoServicioId == 3) // Completado
                                            {
                                                <span class="text-success">
                                                    <i class="fas fa-check-circle"></i> Completado
                                                </span>
                                            }
                                        </div>
                                    </div>
                                    @if (detalle.InicioServicio.HasValue)
                                    {
                                        <small class="text-muted">
                                            Iniciado: @detalle.InicioServicio.Value.ToString("HH:mm")
                                        </small>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No hay servicios pendientes en este momento.
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh cada 30 segundos
        setTimeout(function() {
            location.reload();
        }, 30000);
    </script>
}