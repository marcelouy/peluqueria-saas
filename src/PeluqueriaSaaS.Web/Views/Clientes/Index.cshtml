@model IEnumerable<PeluqueriaSaaS.Application.DTOs.ClienteDto>
@{
    ViewData["Title"] = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Clientes</h1>
    <a asp-action="Create" class="btn btn-success">+ Nuevo Cliente</a>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in Model)
                {
                    <tr>
                        <td>@cliente.Nombre</td>
                        <td>@cliente.Email</td>
                        <td>
                            @if (cliente.Activo)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactivo</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@cliente.Id" class="btn btn-sm btn-outline-primary">Ver</a>
                            <a asp-action="Edit" asp-route-id="@cliente.Id" class="btn btn-sm btn-outline-warning">Editar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>No hay clientes registrados</h4>
        <p>Comienza agregando tu primer cliente.</p>
        <a asp-action="Create" class="btn btn-success">Crear Primer Cliente</a>
    </div>
}
