}

.btn-back:hover {
    background: linear-gradient(135deg, #545b62 0%, #383d41 100%) !important;
    color: white !important;
}
</style>

@model IEnumerable<PeluqueriaSaaS.Application.DTOs.ClienteDto>
@{
    ViewData["Title"] = "Clientes";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4 page-header">
                <h2>👥 Gestión de Clientes</h2>
                <a asp-action="Create" class="btn btn-action btn-create">
                    ➕ Nuevo Cliente
                </a>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <a href="@Url.Action("Create")" class="btn btn-success">
                        <i class="fas fa-plus"></i> Nuevo Cliente
                    </a>
                    <button type="button" id="export-clientes-excel-btn" class="btn btn-success ml-2">
                        <i class="fas fa-file-excel"></i> Exportar Excel
                    </button>
                </div>
                <div class="text-muted">
                    <small>
                        <i class="fas fa-info-circle"></i>
                        Total: @Model.Count() cliente(s)
                        (@Model.Count(c => c.EsActivo) activos, @Model.Count(c => !c.EsActivo) inactivos)
                    </small>
                </div>
            </div>
            @if (Model.Any())
            {
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Email</th>
                                        <th>Teléfono</th>
                                        <th>Estado</th>
                                        <th class="text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@($"{item.Nombre} {item.Apellido}")</strong>
                                            </td>
                                            <td>@(item.Email ?? "Sin email")</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Telefono))
                                                {
                                                    <span>📞 @item.Telefono</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Sin teléfono</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.EsActivo)
                                                {
                                                    <span class="badge bg-success">✅ Activo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">❌ Inactivo</span>
                                                }
                                            </td>
                                            <td class="text-center align-middle">
                                                <div class="action-buttons">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-action btn-view">Ver</a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-action btn-edit">Editar</a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-action btn-delete">Eliminar</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <h4 class="text-muted">👥 No hay clientes registrados</h4>
                        <p class="text-muted">Comienza agregando tu primer cliente</p>
                        <a asp-action="Create" class="btn btn-action btn-create">
                            ➕ Crear Primer Cliente
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/clientes-export.js"></script>
}