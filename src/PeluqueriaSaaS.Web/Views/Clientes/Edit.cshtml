@model PeluqueriaSaaS.Application.Features.Clientes.Commands.UpdateClienteCommand

@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="container">
    <div class="row">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-user-edit"></i> Editar Cliente</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input asp-for="Id" type="hidden" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <!-- Información Personal -->
                        <h5 class="mb-3"><i class="fas fa-user"></i> Información Personal</h5>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Nombre" class="form-label">Nombre *</label>
                                    <input asp-for="Nombre" class="form-control" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Apellido" class="form-label">Apellido *</label>
                                    <input asp-for="Apellido" class="form-control" />
                                    <span asp-validation-for="Apellido" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="FechaNacimiento" class="form-label">Fecha de Nacimiento</label>
                                    <input asp-for="FechaNacimiento" class="form-control" type="date" />
                                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Contacto -->
                        <h5 class="mb-3 mt-4"><i class="fas fa-phone"></i> Contacto</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Email" class="form-label">Email *</label>
                                    <input asp-for="Email" class="form-control" type="email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Telefono" class="form-label">Teléfono</label>
                                    <input asp-for="Telefono" class="form-control" />
                                    <span asp-validation-for="Telefono" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- ✅ ELIMINADO: Sección completa "Dirección" con campos Direccion/Ciudad/CodigoPostal -->
                        <!-- ✅ REASON: Estas propiedades NO existen en UpdateClienteCommand limpio ni Entity Cliente -->
                        
                        <!-- Estado y Notas -->
                        <h5 class="mb-3 mt-4"><i class="fas fa-toggle-on"></i> Estado y Notas</h5>
                        <div class="row">
                            <div class="col-md-9">
                                <div class="form-group mb-3">
                                    <label asp-for="Notas" class="form-label">Notas</label>
                                    <textarea asp-for="Notas" class="form-control" rows="3" placeholder="Observaciones, preferencias, alergias, etc."></textarea>
                                    <span asp-validation-for="Notas" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-check mt-4">
                                    <input asp-for="EsActivo" class="form-check-input" type="checkbox" />
                                    <label asp-for="EsActivo" class="form-check-label">Cliente Activo</label>
                                </div>
                            </div>
                        </div>
                        
                        <!-- ✅ ELIMINADO: Campo UltimaVisita que NO existe en UpdateClienteCommand limpio -->
                        <!-- ✅ REASON: UltimaVisita property eliminada de Command + DTO + Entity Cliente -->
                        
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Actualizar Cliente
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>