@model PeluqueriaSaaS.Application.Features.Clientes.Commands.CrearClienteCommand

@{
    ViewData["Title"] = "Crear Cliente";
}

<!-- SUCCESS/ERROR MESSAGES -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container">
    <div class="row">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-user-plus"></i> Crear Nuevo Cliente</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Clientes" asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <!-- Información Personal -->
                        <h5 class="mb-3"><i class="fas fa-user"></i> Información Personal</h5>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Nombre" class="form-label">Nombre *</label>
                                    <input asp-for="Nombre" class="form-control" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Apellido" class="form-label">Apellido *</label>
                                    <input asp-for="Apellido" class="form-control" />
                                    <span asp-validation-for="Apellido" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="FechaNacimiento" class="form-label">Fecha de Nacimiento</label>
                                    <input asp-for="FechaNacimiento" 
                                           class="form-control" 
                                           type="date" 
                                           id="fechaNacimiento" />
                                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                                    <small class="form-text text-muted">La fecha no puede ser futura</small>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Contacto -->
                        <h5 class="mb-3 mt-4"><i class="fas fa-phone"></i> Contacto</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Email" class="form-label">Email *</label>
                                    <input asp-for="Email" 
                                           class="form-control" 
                                           type="email" 
                                           data-pattern="email-validation"
                                           title="Ingrese un email válido incluyendo dominio completo"
                                           placeholder="usuario@dominio.com"
                                           required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <small class="form-text text-muted">Ejemplo: usuario@dominio.com, nombre@empresa.uy</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Telefono" class="form-label">Teléfono</label>
                                    <input asp-for="Telefono" class="form-control" />
                                    <span asp-validation-for="Telefono" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Notas y Estado -->
                        <h5 class="mb-3 mt-4"><i class="fas fa-sticky-note"></i> Información Adicional</h5>
                        <div class="row">
                            <div class="col-md-9">
                                <div class="form-group mb-3">
                                    <label asp-for="Notas" class="form-label">Notas</label>
                                    <textarea asp-for="Notas" class="form-control" rows="3" placeholder="Observaciones, preferencias, alergias, etc."></textarea>
                                    <span asp-validation-for="Notas" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-check mt-2">
                                    <input asp-for="EsActivo" class="form-check-input" type="checkbox" checked />
                                    <label asp-for="EsActivo" class="form-check-label">Cliente Activo</label>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Guardar Cliente
                            </button>
                            <a asp-controller="Clientes" asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/cliente-validation.js"></script>
}