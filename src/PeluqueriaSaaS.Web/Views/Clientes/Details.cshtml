@model PeluqueriaSaaS.Application.DTOs.ClienteDto
@{
    ViewData["Title"] = "Detalles del Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Detalles del Cliente</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver a Lista</a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h5>Información Personal</h5>
                <p><strong>Nombre:</strong> @Model.Nombre</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Estado:</strong> 
                    @if (Model.Activo)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactivo</span>
                    }
                </p>
            </div>
            <div class="col-md-6">
                <h5>Información del Sistema</h5>
                <p><strong>ID:</strong> @Model.Id</p>
                <p><strong>Creado:</strong> @DateTime.Now.ToString("dd/MM/yyyy")</p>
            </div>
        </div>
    </div>
</div>
