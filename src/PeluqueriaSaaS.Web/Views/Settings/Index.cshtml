@model PeluqueriaSaaS.Domain.Entities.Settings

@{
    ViewData["Title"] = "Configuración del Sistema";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-cogs"></i> Configuración del Sistema
                    </h4>
                    <div>
                        <a href="@Url.Action("Edit", "Settings", new { id = Model?.Id ?? 1 })" class="btn btn-primary">
                            <i class="fas fa-edit"></i> Editar Configuración
                        </a>
                        @if (Model?.ResumenServicioHabilitado == true)
                        {
                            <a href="@Url.Action("PreviewResumen", "Settings")" class="btn btn-info ml-2">
                                <i class="fas fa-eye"></i> Vista Previa Resumen
                            </a>
                        }
                    </div>
                </div>
                <div class="card-body">
                    
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- INFORMACIÓN GENERAL PELUQUERÍA -->
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <h5 class="text-primary border-bottom pb-2">
                                <i class="fas fa-store"></i> Información de la Peluquería
                            </h5>
                        </div>
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="info-label">Nombre:</label>
                                <span class="info-value">@(Model?.NombrePeluqueria ?? "No configurado")</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="info-label">Teléfono:</label>
                                <span class="info-value">@(Model?.TelefonoPeluqueria ?? "No configurado")</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="info-label">Email:</label>
                                <span class="info-value">@(Model?.EmailPeluqueria ?? "No configurado")</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="info-label">Dirección:</label>
                                <span class="info-value">@(Model?.DireccionPeluqueria ?? "No configurado")</span>
                            </div>
                        </div>
                    </div>

                    <!-- CONFIGURACIÓN RESUMEN SERVICIO -->
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <h5 class="text-primary border-bottom pb-2">
                                <i class="fas fa-receipt"></i> Resumen de Servicio
                                <small class="text-muted">(Feature Opcional Uruguay)</small>
                            </h5>
                        </div>
                        <div class="col-md-12">
                            <div class="card border-info">
                                <div class="card-body">
                                    <div class="row align-items-center">
                                        <div class="col-md-8">
                                            <h6 class="mb-1">Estado del Resumen de Servicio</h6>
                                            <p class="text-muted mb-0">
                                                Permite generar comprobantes internos personalizados para clientes
                                            </p>
                                        </div>
                                        <div class="col-md-4 text-end">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" role="switch" 
                                                       id="toggleResumen" @(Model?.ResumenServicioHabilitado == true ? "checked" : "")
                                                       onchange="toggleResumenServicio(this.checked)">
                                                <label class="form-check-label" for="toggleResumen">
                                                    <span class="badge @(Model?.ResumenServicioHabilitado == true ? "bg-success" : "bg-secondary")">
                                                        @(Model?.ResumenServicioHabilitado == true ? "HABILITADO" : "DESHABILITADO")
                                                    </span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    @if (Model?.ResumenServicioHabilitado == true)
                                    {
                                        <hr>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <small class="text-muted">Encabezado:</small>
                                                <p class="mb-1">@(Model?.ResumenEncabezado ?? "No configurado")</p>
                                            </div>
                                            <div class="col-md-6">
                                                <small class="text-muted">Pie de Página:</small>
                                                <p class="mb-1">@(Model?.ResumenPiePagina ?? "No configurado")</p>
                                            </div>
                                            <div class="col-md-6">
                                                <small class="text-muted">Mostrar Logo:</small>
                                                <span class="badge @(Model?.MostrarLogoEnResumen == true ? "bg-success" : "bg-secondary")">
                                                    @(Model?.MostrarLogoEnResumen == true ? "SÍ" : "NO")
                                                </span>
                                            </div>
                                            <div class="col-md-6">
                                                <small class="text-muted">Template Personalizado:</small>
                                                <span class="badge @(Model?.UsarTemplateCustom == true ? "bg-info" : "bg-secondary")">
                                                    @(Model?.UsarTemplateCustom == true ? "PERSONALIZADO" : "ESTÁNDAR")
                                                </span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- CONFIGURACIÓN VISUAL -->
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <h5 class="text-primary border-bottom pb-2">
                                <i class="fas fa-palette"></i> Configuración Visual
                            </h5>
                        </div>
                        <div class="col-md-3">
                            <div class="info-group">
                                <label class="info-label">Color Primario:</label>
                                <div class="d-flex align-items-center">
                                    <div class="color-preview me-2" style="background-color: @(Model?.ColorPrimario ?? "#007bff")"></div>
                                    <span class="info-value">@(Model?.ColorPrimario ?? "#007bff")</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="info-group">
                                <label class="info-label">Color Secundario:</label>
                                <div class="d-flex align-items-center">
                                    <div class="color-preview me-2" style="background-color: @(Model?.ColorSecundario ?? "#6c757d")"></div>
                                    <span class="info-value">@(Model?.ColorSecundario ?? "#6c757d")</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="info-group">
                                <label class="info-label">Tamaño Fuente:</label>
                                <span class="info-value">@(Model?.TamanoFuente ?? "12px")</span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="info-group">
                                <label class="info-label">Moneda:</label>
                                <span class="info-value">@(Model?.SimboloMoneda ?? "$U")</span>
                            </div>
                        </div>
                    </div>

                    <!-- CONFIGURACIÓN SISTEMA -->
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <h5 class="text-primary border-bottom pb-2">
                                <i class="fas fa-server"></i> Configuración del Sistema
                            </h5>
                        </div>
                        <div class="col-md-4">
                            <div class="info-group">
                                <label class="info-label">Notificaciones Email:</label>
                                <span class="badge @(Model?.NotificacionesEmail == true ? "bg-success" : "bg-secondary")">
                                    @(Model?.NotificacionesEmail == true ? "HABILITADO" : "DESHABILITADO")
                                </span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="info-group">
                                <label class="info-label">Backup Automático:</label>
                                <span class="badge @(Model?.BackupAutomatico == true ? "bg-success" : "bg-secondary")">
                                    @(Model?.BackupAutomatico == true ? "HABILITADO" : "DESHABILITADO")
                                </span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="info-group">
                                <label class="info-label">Retención Ventas:</label>
                                <span class="info-value">@(Model?.DiasRetencionVentas ?? 365) días</span>
                            </div>
                        </div>
                    </div>

                    <!-- INFORMACIÓN SISTEMA -->
                    <div class="row">
                        <div class="col-md-12">
                            <h5 class="text-primary border-bottom pb-2">
                                <i class="fas fa-info-circle"></i> Información del Sistema
                            </h5>
                        </div>
                        <div class="col-md-4">
                            <div class="info-group">
                                <label class="info-label">Código Peluquería:</label>
                                <span class="info-value">@(Model?.CodigoPeluqueria ?? "MAIN")</span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="info-group">
                                <label class="info-label">Fecha Creación:</label>
                                <span class="info-value">@(Model?.FechaCreacion.ToString("dd/MM/yyyy HH:mm") ?? "No disponible")</span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="info-group">
                                <label class="info-label">Última Actualización:</label>
                                <span class="info-value">@(Model?.FechaActualizacion?.ToString("dd/MM/yyyy HH:mm") ?? "Nunca actualizado")</span>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- CSS PERSONALIZADO -->
<style>
    .info-group {
        margin-bottom: 1rem;
        padding: 0.5rem 0;
    }
    
    .info-label {
        font-weight: 600;
        color: #495057;
        display: block;
        margin-bottom: 0.25rem;
        font-size: 0.9rem;
    }
    
    .info-value {
        color: #212529;
        font-size: 1rem;
    }
    
    .color-preview {
        width: 20px;
        height: 20px;
        border-radius: 4px;
        border: 1px solid #dee2e6;
        display: inline-block;
    }
    
    .form-switch .form-check-input {
        width: 3rem;
        height: 1.5rem;
    }
    
    .card.border-info {
        border-width: 2px;
    }
</style>

@section Scripts {
    <script src="~/js/settings.js"></script>
}