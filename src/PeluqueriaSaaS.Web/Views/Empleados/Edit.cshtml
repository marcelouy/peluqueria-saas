@* ✅ REEMPLAZAR COMPLETO: src/PeluqueriaSaaS.Web/Views/Empleados/Edit.cshtml *@
@* FIXED: Dropdown using ViewBag options + better structure *@

@model PeluqueriaSaaS.Domain.Entities.Empleado
@{
    ViewData["Title"] = "Editar Empleado";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-0">
            <i class="fas fa-user-edit me-2"></i>Editar Empleado
        </h2>
        <small class="text-muted">Modificar información del empleado: @Model.Nombre @Model.Apellido</small>
    </div>
    <div class="btn-group">
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
            <i class="fas fa-eye me-2"></i>Ver Detalles
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Volver
        </a>
    </div>
</div>

<form asp-action="Edit" method="post" class="needs-validation" novalidate>
    <input asp-for="Id" type="hidden">
    @* ✅ PRESERVE ALL HIDDEN FIELDS *@
    <input asp-for="FechaRegistro" type="hidden">
    
    <div class="row">
        <!-- Información Personal -->
        <div class="col-lg-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-user me-2"></i>Información Personal
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre *</label>
                            <input asp-for="Nombre" class="form-control" required>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Apellido" class="form-label">Apellido *</label>
                            <input asp-for="Apellido" class="form-control" required>
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email *</label>
                        <input asp-for="Email" type="email" class="form-control" required>
                        <div id="email-feedback"></div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Telefono" class="form-label">Teléfono</label>
                            <input asp-for="Telefono" class="form-control">
                            <div id="telefono-feedback"></div>
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="FechaNacimiento" class="form-label">Fecha de Nacimiento</label>
                            <input asp-for="FechaNacimiento" type="date" class="form-control">
                            <div id="fecha-feedback"></div>
                            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Información Laboral -->
        <div class="col-lg-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-briefcase me-2"></i>Información Laboral
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Cargo" class="form-label">Cargo *</label>
                        @* ✅ FIXED: Use ViewBag options instead of hardcoded *@
                        @Html.DropDownListFor(m => m.Cargo, (IEnumerable<SelectListItem>)ViewBag.CargosOptions, new { @class = "form-select", required = "required" })
                        <span asp-validation-for="Cargo" class="text-danger"></span>
                        
                        @* ✅ DEBUG INFO - REMOVE AFTER TESTING *@
                        <small class="text-muted">
                            Valor actual: <strong>@Model.Cargo</strong>
                        </small>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Salario" class="form-label">Salario</label>
                            <div class="input-group">
                                <span class="input-group-text">$U</span>
                                <input asp-for="Salario" type="number" step="0.01" class="form-control">
                            </div>
                            <span asp-validation-for="Salario" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="FechaContratacion" class="form-label">Fecha Contratación *</label>
                            <input asp-for="FechaContratacion" type="date" class="form-control" readonly>
                            <small class="form-text text-muted">Esta fecha no se puede modificar</small>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Horario" class="form-label">Horario de Trabajo</label>
                        @* ✅ FIXED: Use ViewBag options for Horario too *@
                        @Html.DropDownListFor(m => m.Horario, (IEnumerable<SelectListItem>)ViewBag.HorariosOptions, new { @class = "form-select" })
                        <span asp-validation-for="Horario" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Información Adicional -->
    <div class="card mt-4">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-map-marker-alt me-2"></i>Información Adicional
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Direccion" class="form-label">Dirección</label>
                    <input asp-for="Direccion" class="form-control" placeholder="Calle y número">
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="Ciudad" class="form-label">Ciudad</label>
                    <input asp-for="Ciudad" class="form-control">
                    <span asp-validation-for="Ciudad" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="CodigoPostal" class="form-label">Código Postal</label>
                    <input asp-for="CodigoPostal" class="form-control">
                    <span asp-validation-for="CodigoPostal" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-8 mb-3">
                    <label asp-for="Notas" class="form-label">Notas</label>
                    <textarea asp-for="Notas" class="form-control" rows="3" 
                              placeholder="Información adicional, habilidades especiales, etc."></textarea>
                    <span asp-validation-for="Notas" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Estado</label>
                    <div class="form-check form-switch">
                        <input asp-for="EsActivo" class="form-check-input" type="checkbox">
                        <label asp-for="EsActivo" class="form-check-label">
                            Empleado Activo
                        </label>
                    </div>
                    <small class="text-muted">Los empleados inactivos no aparecen en asignaciones</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Botones de acción -->
    <div class="card mt-4">
        <div class="card-body">
            <div class="d-flex justify-content-between">
                <div class="btn-group">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                        <i class="fas fa-eye me-2"></i>Ver Detalles
                    </a>
                    <button type="button" class="btn btn-outline-danger" 
                            onclick="confirmarEliminacion(@Model.Id)">
                        <i class="fas fa-trash me-2"></i>Eliminar
                    </button>
                </div>
                <div class="btn-group">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Guardar Cambios
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Modal de confirmación para eliminar -->
<div class="modal fade" id="modalEliminar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                    Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">¿Estás seguro de que deseas eliminar este empleado?</p>
                <small class="text-muted">Esta acción no se puede deshacer.</small>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form id="formEliminar" asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Eliminar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/empleados-validation.js"></script>
    <script>
        function confirmarEliminacion(id) {
            var modal = new bootstrap.Modal(document.getElementById('modalEliminar'));
            modal.show();
        }

        // ✅ DEBUG: Show current values on page load
        document.addEventListener('DOMContentLoaded', function() {
            console.log('🔍 DEBUG Edit View:');
            console.log('- Cargo value:', '@Model.Cargo');
            console.log('- Horario value:', '@(Model.Horario ?? "NULL")');
            
            // Show selected value in dropdown
            const cargoSelect = document.querySelector('select[name="Cargo"]');
            if (cargoSelect) {
                console.log('- Cargo dropdown selected:', cargoSelect.value);
                console.log('- Available options:', Array.from(cargoSelect.options).map(o => o.value));
            }
        });
    </script>
}