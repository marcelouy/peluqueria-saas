@model PeluqueriaSaaS.Application.DTOs.EmpleadoCreateDto
@{
    ViewData["Title"] = "Nuevo Empleado";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-0">
            <i class="fas fa-user-plus me-2"></i>Nuevo Empleado
        </h2>
        <small class="text-muted">Agrega un nuevo empleado al sistema</small>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Volver a la lista
    </a>
</div>

<form asp-action="Create" method="post" class="needs-validation" novalidate>
    <div class="row">
        <!-- Información Personal -->
        <div class="col-lg-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-user me-2"></i>Información Personal
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre *</label>
                            <input asp-for="Nombre" class="form-control" required>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Apellido" class="form-label">Apellido *</label>
                            <input asp-for="Apellido" class="form-control" required>
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email *</label>
                        <input asp-for="Email" type="email" class="form-control" required>
                        <div id="email-feedback"></div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Telefono" class="form-label">Teléfono</label>
                            <input asp-for="Telefono" class="form-control">
                            <div id="telefono-feedback"></div>
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="FechaNacimiento" class="form-label">Fecha de Nacimiento</label>
                            <input asp-for="FechaNacimiento" type="date" class="form-control">
                            <div id="fecha-feedback"></div>
                            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Información Laboral -->
        <div class="col-lg-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-briefcase me-2"></i>Información Laboral
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Cargo" class="form-label">Cargo *</label>
                        <select asp-for="Cargo" class="form-select" required>
                            <option value="">Seleccionar cargo...</option>
                            <option value="Estilista">Estilista</option>
                            <option value="Colorista">Colorista</option>
                            <option value="Barbero">Barbero</option>
                            <option value="Manicurista">Manicurista</option>
                            <option value="Recepcionista">Recepcionista</option>
                            <option value="Gerente">Gerente</option>
                            <option value="Asistente">Asistente</option>
                        </select>
                        <span asp-validation-for="Cargo" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Salario" class="form-label">Salario</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Salario" type="number" step="0.01" class="form-control">
                            </div>
                            <span asp-validation-for="Salario" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="FechaContratacion" class="form-label">Fecha Contratación *</label>
                            <input asp-for="FechaContratacion" type="date" class="form-control" required>
                            <span asp-validation-for="FechaContratacion" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Horario" class="form-label">Horario de Trabajo</label>
                        <select asp-for="Horario" class="form-select">
                            <option value="">Seleccionar horario...</option>
                            <option value="Lun-Vie 8:00-16:00">Lun-Vie 8:00-16:00</option>
                            <option value="Lun-Vie 9:00-17:00">Lun-Vie 9:00-17:00</option>
                            <option value="Lun-Vie 10:00-18:00">Lun-Vie 10:00-18:00</option>
                            <option value="Lun-Sab 9:00-17:00">Lun-Sab 9:00-17:00</option>
                            <option value="Mar-Sab 9:00-17:00">Mar-Sab 9:00-17:00</option>
                            <option value="Tiempo Parcial">Tiempo Parcial</option>
                        </select>
                        <span asp-validation-for="Horario" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Información Adicional -->
    <div class="card mt-4">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-map-marker-alt me-2"></i>Información Adicional
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Direccion" class="form-label">Dirección</label>
                    <input asp-for="Direccion" class="form-control" placeholder="Calle y número">
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="Ciudad" class="form-label">Ciudad</label>
                    <input asp-for="Ciudad" class="form-control">
                    <span asp-validation-for="Ciudad" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="CodigoPostal" class="form-label">Código Postal</label>
                    <input asp-for="CodigoPostal" class="form-control">
                    <span asp-validation-for="CodigoPostal" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-8 mb-3">
                    <label asp-for="Notas" class="form-label">Notas</label>
                    <textarea asp-for="Notas" class="form-control" rows="3" 
                              placeholder="Información adicional, habilidades especiales, etc."></textarea>
                    <span asp-validation-for="Notas" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Estado</label>
                    <div class="form-check form-switch">
                        <input asp-for="EsActivo" class="form-check-input" type="checkbox" checked>
                        <label asp-for="EsActivo" class="form-check-label">
                            Empleado Activo
                        </label>
                    </div>
                    <small class="text-muted">Los empleados inactivos no aparecen en asignaciones</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Botones de acción -->
    <div class="card mt-4">
        <div class="card-body">
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-times me-2"></i>Cancelar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Crear Empleado
                </button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="/js/empleados-validation.js"></script>
}