@model IEnumerable<PeluqueriaSaaS.Domain.Entities.Empleado>
@{
    ViewData["Title"] = "Empleados";
    var soloActivos = ViewBag.SoloActivos as bool?;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-0">
            <i class="fas fa-users me-2"></i>Empleados
            <small class="text-muted">(@Model.Count())</small>
        </h2>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Nuevo Empleado
    </a>
</div>

<!-- Filtros -->
<div class="card mb-4">
    <div class="card-body py-3">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="btn-group" role="group">
                    <a asp-action="Index" 
                       class="btn @(soloActivos != true ? "btn-primary" : "btn-outline-primary")">
                        <i class="fas fa-list me-1"></i>Todos (@Model.Count())
                    </a>
                    <a asp-action="Index" asp-route-soloActivos="true"
                       class="btn @(soloActivos == true ? "btn-success" : "btn-outline-success")">
                        <i class="fas fa-check-circle me-1"></i>Activos (@Model.Count(e => e.EsActivo))
                    </a>
                </div>
            </div>
            <div class="col-md-6 text-end">
                <small class="text-muted">
                    <i class="fas fa-info-circle me-1"></i>
                    @Model.Count(e => !e.EsActivo) empleados inactivos
                </small>
            </div>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="fas fa-users fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">No hay empleados registrados</h4>
            <p class="text-muted mb-4">Comienza agregando tu primer empleado al sistema</p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Crear Primer Empleado
            </a>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Empleado</th>
                            <th>Cargo</th>
                            <th>Contacto</th>
                            <th>Fecha Contratación</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var empleado in Model)
                        {
                            <tr class="@(!empleado.EsActivo ? "table-secondary" : "")">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle me-3 @(empleado.EsActivo ? "bg-primary" : "bg-secondary")">
                                            @empleado.Nombre.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@empleado.NombreCompleto</div>
                                            @if (!string.IsNullOrEmpty(empleado.Email))
                                            {
                                                <small class="text-muted">@empleado.Email</small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-info">@empleado.Cargo</span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(empleado.Telefono))
                                    {
                                        <small class="text-muted">
                                            <i class="fas fa-phone me-1"></i>@empleado.Telefono
                                        </small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">Sin teléfono</small>
                                    }
                                </td>
                                <td>
                                    <small>@empleado.FechaContratacion.ToString("dd/MM/yyyy")</small>
                                </td>
                                <td>
                                    @if (empleado.EsActivo)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle me-1"></i>Activo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-pause-circle me-1"></i>Inactivo
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@empleado.Id" 
                                           class="btn btn-outline-info" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@empleado.Id" 
                                           class="btn btn-outline-primary" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger" 
                                                onclick="confirmarEliminacion(@empleado.Id, '@empleado.NombreCompleto')" 
                                                title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<!-- Modal de confirmación para eliminar -->
<div class="modal fade" id="modalEliminar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                    Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">¿Estás seguro de que deseas eliminar al empleado <strong id="nombreEmpleado"></strong>?</p>
                <small class="text-muted">Esta acción no se puede deshacer.</small>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form id="formEliminar" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Eliminar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
.avatar-circle {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    font-size: 16px;
}
</style>

<script>
function confirmarEliminacion(id, nombre) {
    document.getElementById('nombreEmpleado').textContent = nombre;
    document.getElementById('formEliminar').action = '/Empleado/Delete/' + id;
    
    var modal = new bootstrap.Modal(document.getElementById('modalEliminar'));
    modal.show();
}
</script>
