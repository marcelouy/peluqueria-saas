@model PeluqueriaSaaS.Domain.Entities.Articulo

@{
    ViewData["Title"] = "Editar Art√≠culo";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-edit text-warning"></i>
                        Editar Art√≠culo
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @* üö® FIX CR√çTICO: Triple safeguard para preservar Id *@
                        @* Principal: ASP.NET Core syntax - M√ÅS ROBUSTO *@
                        <input type="hidden" asp-for="Id" />
                        
                        @* Backup 1: Manual value assignment *@
                        <input type="hidden" name="ArticuloId" value="@Model.Id" />
                        
                        @* Backup 2: Route value preservation *@
                        <input type="hidden" name="OriginalId" value="@ViewBag.ArticuloId" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Codigo" class="form-label">C√≥digo</label>
                                    <input asp-for="Codigo" class="form-control" placeholder="C√≥digo √∫nico (opcional)" readonly />
                                    <span asp-validation-for="Codigo" class="text-danger"></span>
                                    <small class="form-text text-muted">El c√≥digo no se puede modificar</small>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Nombre" class="form-label required-field">Nombre</label>
                                    <input asp-for="Nombre" class="form-control" required />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Descripcion" class="form-label">Descripci√≥n</label>
                                    <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Descripci√≥n del producto"></textarea>
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Precio" class="form-label required-field">Precio Venta</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="Precio" class="form-control" type="number" step="0.01" min="0" required />
                                    </div>
                                    <span asp-validation-for="Precio" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="PrecioCosto" class="form-label">Precio Costo</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="PrecioCosto" class="form-control" type="number" step="0.01" min="0" />
                                    </div>
                                    <span asp-validation-for="PrecioCosto" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Margen %</label>
                                    <div class="input-group">
                                        <input asp-for="Margen" class="form-control" type="number" step="0.01" readonly />
                                        <span class="input-group-text">%</span>
                                    </div>
                                    <small class="text-muted">Se calcula autom√°ticamente</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <div class="form-check form-switch">
                                        <input asp-for="Oferta" class="form-check-input" type="checkbox" />
                                        <label asp-for="Oferta" class="form-check-label">En Oferta</label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="PrecioOferta" class="form-label">Precio Oferta</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="PrecioOferta" class="form-control" type="number" step="0.01" min="0" />
                                    </div>
                                    <span asp-validation-for="PrecioOferta" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="Stock" class="form-label required-field">Stock Actual</label>
                                    <input asp-for="Stock" class="form-control" type="number" min="0" required />
                                    <span asp-validation-for="Stock" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="StockMinimo" class="form-label">Stock M√≠nimo</label>
                                    <input asp-for="StockMinimo" class="form-control" type="number" min="0" />
                                    <span asp-validation-for="StockMinimo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <div class="form-check form-switch">
                                        <input asp-for="RequiereStock" class="form-check-input" type="checkbox" />
                                        <label asp-for="RequiereStock" class="form-check-label">Controlar Stock</label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="Categoria" class="form-label">Categor√≠a</label>
                                    <input asp-for="Categoria" class="form-control" list="categorias" />
                                    <datalist id="categorias">
                                        @if (ViewBag.Categorias != null)
                                        {
                                            @foreach (var categoria in ViewBag.Categorias as IEnumerable<string>)
                                            {
                                                <option value="@categoria">@categoria</option>
                                            }
                                        }
                                    </datalist>
                                    <span asp-validation-for="Categoria" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="Marca" class="form-label">Marca</label>
                                    <input asp-for="Marca" class="form-control" list="marcas" />
                                    <datalist id="marcas">
                                        @if (ViewBag.Marcas != null)
                                        {
                                            @foreach (var marca in ViewBag.Marcas as IEnumerable<string>)
                                            {
                                                <option value="@marca">@marca</option>
                                            }
                                        }
                                    </datalist>
                                    <span asp-validation-for="Marca" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="Proveedor" class="form-label">Proveedor</label>
                                    <input asp-for="Proveedor" class="form-control" list="proveedores" />
                                    <datalist id="proveedores">
                                        @if (ViewBag.Proveedores != null)
                                        {
                                            @foreach (var proveedor in ViewBag.Proveedores as IEnumerable<string>)
                                            {
                                                <option value="@proveedor">@proveedor</option>
                                            }
                                        }
                                    </datalist>
                                    <span asp-validation-for="Proveedor" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Peso" class="form-label">Peso</label>
                                    <div class="input-group">
                                        <input asp-for="Peso" class="form-control" type="number" step="0.001" min="0" />
                                        <span class="input-group-text">kg</span>
                                    </div>
                                    <span asp-validation-for="Peso" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Contenido" class="form-label">Contenido</label>
                                    <input asp-for="Contenido" class="form-control" placeholder="Ej: 500ml, 100g, etc." />
                                    <span asp-validation-for="Contenido" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Volver
                                </a>
                                
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-save"></i> Actualizar Art√≠culo
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@* üîß DEBUG INFO CARD - REMOVER EN PRODUCCI√ìN *@
<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-12">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0">üîß DEBUG INFO - UPDATE FIX</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <small>
                                <strong>Model.Id:</strong> @Model.Id<br />
                                <strong>ViewBag.ArticuloId:</strong> @ViewBag.ArticuloId<br />
                                <strong>Route ID:</strong> @Context.Request.RouteValues["id"]
                            </small>
                        </div>
                        <div class="col-md-8">
                            <small>
                                <strong>Audit Info:</strong><br />
                                <strong>Creado por:</strong> @Model.CreadoPor | <strong>Fecha:</strong> @Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")<br />
                                @if (!string.IsNullOrEmpty(Model.ActualizadoPor))
                                {
                                    <text><strong>Actualizado por:</strong> @Model.ActualizadoPor | <strong>Fecha:</strong> @Model.FechaActualizacion.ToString("dd/MM/yyyy HH:mm")</text>
                                }
                                else
                                {
                                    <em>Sin actualizaciones previas</em>
                                }
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // üîß DEBUG: Verificar hidden fields antes del submit
        document.querySelector('form').addEventListener('submit', function(e) {
            console.log('üîß Form submit - Hidden field values:');
            console.log('Id (asp-for):', document.querySelector('input[name="Id"]')?.value);
            console.log('ArticuloId (backup):', document.querySelector('input[name="ArticuloId"]')?.value);
            console.log('OriginalId (route):', document.querySelector('input[name="OriginalId"]')?.value);
            
            // Verificar que al menos uno tiene valor
            const id1 = document.querySelector('input[name="Id"]')?.value;
            const id2 = document.querySelector('input[name="ArticuloId"]')?.value;
            const id3 = document.querySelector('input[name="OriginalId"]')?.value;
            
            if (!id1 && !id2 && !id3) {
                console.error('‚ùå NING√öN ID DISPONIBLE - FORM SUBMISSION PROBLEM√ÅTICA');
                alert('Error: No se pudo preservar el ID del art√≠culo. Contacte al administrador.');
                e.preventDefault();
                return false;
            } else {
                console.log('‚úÖ Al menos un ID disponible para submission');
            }
        });
        
        // üîß DEBUG: Mostrar informaci√≥n al cargar la p√°gina
        console.log('üîß Edit.cshtml loaded - Article ID: @Model.Id');
        console.log('üîß ViewBag.ArticuloId: @ViewBag.ArticuloId');
        console.log('üîß Route ID: @Context.Request.RouteValues["id"]');
    </script>
}

<style>
.required-field::after {
    content: " *";
    color: red;
}

/* Debug card styling */
.card.border-warning {
    border-width: 2px;
}

.card.border-warning .card-header {
    border-bottom: 2px solid #ffc107;
}
</style>