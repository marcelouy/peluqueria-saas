@model PeluqueriaSaaS.Domain.Entities.Articulo

@{
    ViewData["Title"] = "Editar Artículo";
    // Calcular margen inicial si hay valores
    decimal margenInicial = 0;
    if (Model.PrecioCosto.HasValue && Model.PrecioCosto.Value > 0) {
        margenInicial = ((Model.Precio - Model.PrecioCosto.Value) / Model.PrecioCosto.Value) * 100;
    }
    
    // Obtener impuestos actuales del artículo
    var impuestosActuales = ViewBag.ImpuestosActuales as List<int> ?? new List<int>();
}

<link rel="stylesheet" href="~/css/articulos.css" />

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-edit text-warning"></i>
                        Editar Artículo
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @* Preservar IDs y campos de auditoría *@
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" name="ArticuloId" value="@Model.Id" />
                        <input type="hidden" name="OriginalId" value="@ViewBag.ArticuloId" />
                        <input type="hidden" asp-for="TenantId" />
                        <input type="hidden" asp-for="FechaCreacion" />
                        <input type="hidden" asp-for="CreadoPor" />
                        
                        <!-- Información Básica -->
                        <div class="section-header">
                            <h5 class="text-primary">
                                <i class="fas fa-info-circle"></i> Información Básica
                            </h5>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Codigo" class="form-label">Código</label>
                                    <input asp-for="Codigo" class="form-control" placeholder="Código único (opcional)" readonly />
                                    <span asp-validation-for="Codigo" class="text-danger"></span>
                                    <small class="form-text text-muted">El código no se puede modificar</small>
                                </div>
                            </div>
                            
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label asp-for="Nombre" class="form-label required-field">Nombre</label>
                                    <input asp-for="Nombre" class="form-control" required />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Descripcion" class="form-label">Descripción</label>
                                    <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Descripción del producto"></textarea>
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Precios y Márgenes -->
                        <div class="section-header">
                            <h5 class="text-primary">
                                <i class="fas fa-dollar-sign"></i> Precios y Márgenes
                            </h5>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="PrecioCosto" class="form-label">Precio Costo (sin IVA)</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="PrecioCosto" class="form-control" type="number" step="0.01" min="0" />
                                    </div>
                                    <span asp-validation-for="PrecioCosto" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="Precio" class="form-label required-field">Precio Venta (sin IVA)</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="Precio" class="form-control" type="number" step="0.01" min="0" required />
                                    </div>
                                    <span asp-validation-for="Precio" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label class="form-label">
                                        Margen %
                                        <i class="fas fa-info-circle text-muted" data-bs-toggle="tooltip" 
                                           title="Ingrese costo y margen para calcular precio, o costo y precio para ver margen"></i>
                                    </label>
                                    <div class="input-group">
                                        <input type="number" class="form-control" id="margenCalculado" 
                                               step="0.01" value="@margenInicial.ToString("F2")" />
                                        <span class="input-group-text">%</span>
                                    </div>
                                    <div id="margenDisplay" class="form-text"></div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-check mt-4">
                                    <input asp-for="Oferta" class="form-check-input" type="checkbox" />
                                    <label asp-for="Oferta" class="form-check-label">En Oferta</label>
                                </div>
                            </div>
                        </div>

                        <div class="row" id="precioOfertaRow" style="@(Model.Oferta ? "" : "display: none;")">
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="PrecioOferta" class="form-label">Precio Oferta</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="PrecioOferta" class="form-control" type="number" step="0.01" min="0" />
                                    </div>
                                    <span asp-validation-for="PrecioOferta" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- SECCIÓN DE IMPUESTOS -->
                        <div class="section-header">
                            <h5 class="text-primary">
                                <i class="fas fa-percentage"></i> Impuestos Aplicables
                            </h5>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle"></i> Modifique los impuestos que aplican a este artículo
                                </div>
                            </div>
                        </div>

                        <div id="impuestosContainer">
                            @{
                                var impuestosDisp = ViewBag.ImpuestosDisponibles as IEnumerable<dynamic>;
                                if (impuestosDisp != null && impuestosDisp.Any())
                                {
                                    <div class="alert alert-success">
                                        <i class="fas fa-check"></i> Se encontraron @impuestosDisp.Count() tipos de impuestos
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-danger">
                                        <i class="fas fa-times"></i> No se encontraron impuestos disponibles
                                    </div>
                                }
                            }
                            
                            @if (ViewBag.ImpuestosDisponibles != null)
                            {
                                @foreach (dynamic tipo in ViewBag.ImpuestosDisponibles)
                                {
                                    string tipoCodigo = tipo.TipoCodigo;
                                    string tipoNombre = tipo.TipoNombre;
                                    var tasas = tipo.Tasas as IEnumerable<dynamic>;
                                    
                                    <div class="card mb-3">
                                        <div class="card-header py-2 bg-light">
                                            <h6 class="mb-0">
                                                <i class="fas fa-receipt"></i> @tipoNombre
                                            </h6>
                                        </div>
                                        <div class="card-body">
                                            @if (tasas != null && tasas.Any())
                                            {
                                                <div class="row">
                                                    @foreach (dynamic tasa in tasas)
                                                    {
                                                        int tasaId = tasa.TasaId;
                                                        string tasaNombre = tasa.Nombre;
                                                        decimal tasaPorcentaje = tasa.Porcentaje;
                                                        bool esDefault = tasa.EsDefault;
                                                        bool isChecked = impuestosActuales.Contains(tasaId);
                                                        
                                                        <div class="col-md-4">
                                                            <div class="form-check">
                                                                <input class="form-check-input impuesto-check" 
                                                                       type="@(tipoCodigo == "IVA" ? "radio" : "checkbox")"
                                                                       name="@(tipoCodigo == "IVA" ? "impuestoIVA" : "impuestosSeleccionados")"
                                                                       value="@tasaId"
                                                                       data-tipo="@tipoCodigo"
                                                                       data-porcentaje="@tasaPorcentaje"
                                                                       data-nombre="@tasaNombre"
                                                                       @(isChecked ? "checked" : "")
                                                                       id="tasa_@tasaId" />
                                                                <label class="form-check-label" for="tasa_@tasaId">
                                                                    @tasaNombre (@tasaPorcentaje%)
                                                                    @if (esDefault)
                                                                    {
                                                                        <span class="badge bg-primary">Por defecto</span>
                                                                    }
                                                                    @if (isChecked)
                                                                    {
                                                                        <span class="badge bg-success">Actual</span>
                                                                    }
                                                                </label>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <p class="text-muted">No hay tasas disponibles para este tipo de impuesto</p>
                                            }
                                        </div>
                                    </div>
                                }

                                <!-- Hidden input para enviar el IVA seleccionado -->
                                <input type="hidden" name="impuestosSeleccionados" id="hiddenIVA" />
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    <i class="fas fa-exclamation-triangle"></i> No hay impuestos configurados en el sistema
                                </div>
                            }
                        </div>

                        <!-- Resumen de Precio con Impuestos -->
                        <div class="card bg-light mb-3">
                            <div class="card-body">
                                <h6><i class="fas fa-calculator"></i> Resumen de Precio Final</h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <table class="table table-sm">
                                            <tbody>
                                                <tr>
                                                    <td>Precio Venta (sin impuestos):</td>
                                                    <td class="text-end"><strong>$<span id="precioBase">0.00</span></strong></td>
                                                </tr>
                                                <tr id="filaImpuestos">
                                                    <td colspan="2">
                                                        <div id="desgloseImpuestos" class="small text-muted">
                                                            <!-- Se llenará dinámicamente -->
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr class="table-primary">
                                                    <td><strong>Precio Final al Consumidor:</strong></td>
                                                    <td class="text-end"><strong>$<span id="precioFinal">0.00</span></strong></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="alert alert-warning mb-0">
                                            <small>
                                                <i class="fas fa-info-circle"></i> 
                                                Los cambios en los impuestos se aplicarán a partir de la fecha actual.
                                                Los impuestos anteriores quedarán registrados en el histórico.
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Control de Inventario -->
                        <div class="section-header">
                            <h5 class="text-primary">
                                <i class="fas fa-warehouse"></i> Control de Inventario
                            </h5>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-check mb-3">
                                    <input asp-for="RequiereStock" class="form-check-input" type="checkbox" />
                                    <label asp-for="RequiereStock" class="form-check-label">Controlar Stock</label>
                                </div>
                            </div>

                            <div class="col-md-3" id="stockActualDiv" style="@(!Model.RequiereStock ? "display: none;" : "")">
                                <div class="mb-3">
                                    <label asp-for="Stock" class="form-label required-field">Stock Actual</label>
                                    <input asp-for="Stock" class="form-control" type="number" min="0" required />
                                    <span asp-validation-for="Stock" class="text-danger"></span>
                                    @if(Model.Stock <= Model.StockMinimo)
                                    {
                                        <div class="alert alert-warning mt-1 py-1 px-2">
                                            <small><i class="fas fa-exclamation-triangle"></i> Stock bajo el mínimo</small>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="col-md-3" id="stockMinimoDiv" style="@(!Model.RequiereStock ? "display: none;" : "")">
                                <div class="mb-3">
                                    <label asp-for="StockMinimo" class="form-label">Stock Mínimo</label>
                                    <input asp-for="StockMinimo" class="form-control" type="number" min="0" />
                                    <span asp-validation-for="StockMinimo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Clasificación -->
                        <div class="section-header">
                            <h5 class="text-primary">
                                <i class="fas fa-tags"></i> Clasificación
                            </h5>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Categoria" class="form-label">Categoría</label>
                                    <input asp-for="Categoria" class="form-control" list="categorias" />
                                    <datalist id="categorias">
                                        @foreach (var categoria in (ViewBag.Categorias as IEnumerable<string>) ?? Enumerable.Empty<string>())
                                        {
                                            <option value="@categoria">@categoria</option>
                                        }
                                    </datalist>
                                    <span asp-validation-for="Categoria" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Marca" class="form-label">Marca</label>
                                    <input asp-for="Marca" class="form-control" list="marcas" />
                                    <datalist id="marcas">
                                        @foreach (var marca in (ViewBag.Marcas as IEnumerable<string>) ?? Enumerable.Empty<string>())
                                        {
                                            <option value="@marca">@marca</option>
                                        }
                                    </datalist>
                                    <span asp-validation-for="Marca" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Proveedor" class="form-label">Proveedor</label>
                                    <input asp-for="Proveedor" class="form-control" list="proveedores" />
                                    <datalist id="proveedores">
                                        @foreach (var proveedor in (ViewBag.Proveedores as IEnumerable<string>) ?? Enumerable.Empty<string>())
                                        {
                                            <option value="@proveedor">@proveedor</option>
                                        }
                                    </datalist>
                                    <span asp-validation-for="Proveedor" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Información Física -->
                        <div class="section-header">
                            <h5 class="text-primary">
                                <i class="fas fa-weight"></i> Información Física
                            </h5>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Contenido" class="form-label">Contenido</label>
                                    <input asp-for="Contenido" class="form-control" placeholder="Ej: 500ml, 100g, etc." />
                                    <span asp-validation-for="Contenido" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Peso" class="form-label">Peso</label>
                                    <div class="input-group">
                                        <input asp-for="Peso" class="form-control" type="number" step="0.001" min="0" />
                                        <span class="input-group-text">kg</span>
                                    </div>
                                    <span asp-validation-for="Peso" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Información de Auditoría -->
                        <div class="card bg-light mb-3">
                            <div class="card-body py-2">
                                <small class="text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    @($"Creado: {Model.CreadoPor} - {Model.FechaCreacion:dd/MM/yyyy HH:mm}")
                                </small>
                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Volver
                                </a>
                                
                                <button type="submit" class="btn btn-warning" onclick="prepararEnvio(); return true;">
                                    <i class="fas fa-save"></i> Actualizar Artículo
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/articulos-calculos.js"></script>
    <script src="~/js/articulos-impuestos-dinamicos.js"></script>
    
    <script>
        // Función para preparar el envío del formulario
        function prepararEnvio() {
            // Copiar el valor del radio IVA seleccionado al hidden input
            var ivaSeleccionado = document.querySelector('input[name="impuestoIVA"]:checked');
            if (ivaSeleccionado) {
                document.getElementById('hiddenIVA').value = ivaSeleccionado.value;
                console.log('IVA seleccionado para envío:', ivaSeleccionado.value);
            }
            
            // Debug: ver todos los impuestos que se enviarán
            var impuestosSeleccionados = document.querySelectorAll('input[name="impuestosSeleccionados"]:checked');
            console.log('Otros impuestos seleccionados:', impuestosSeleccionados.length);
            
            return true;
        }
        
        // Disparar cálculo inicial cuando la página esté lista
        window.addEventListener('load', function() {
            if (typeof calcularPrecioConImpuestos === 'function') {
                calcularPrecioConImpuestos();
            }
        });
    </script>
}

<style>
.required-field::after {
    content: " *";
    color: red;
}

.section-header {
    border-bottom: 2px solid #e3e6f0;
    padding-bottom: 0.5rem;
    margin-bottom: 1rem;
    margin-top: 1.5rem;
}

.section-header:first-child {
    margin-top: 0;
}
</style>