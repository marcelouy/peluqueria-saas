@model PeluqueriaSaaS.Domain.Entities.Articulo

@{
    ViewData["Title"] = "Editar Artículo";
    // Calcular margen inicial si hay valores
    decimal margenInicial = 0;
    if (Model.PrecioCosto.HasValue && Model.PrecioCosto.Value > 0) {
        margenInicial = ((Model.Precio - Model.PrecioCosto.Value) / Model.PrecioCosto.Value) * 100;
    }
}

<link rel="stylesheet" href="~/css/articulos.css" />

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-edit text-warning"></i>
                        Editar Artículo
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @* Preservar IDs y campos de auditoría *@
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" name="ArticuloId" value="@Model.Id" />
                        <input type="hidden" name="OriginalId" value="@ViewBag.ArticuloId" />
                        <input type="hidden" asp-for="TenantId" />
                        <input type="hidden" asp-for="FechaCreacion" />
                        <input type="hidden" asp-for="CreadoPor" />
                        
                        <!-- Información Básica -->
                        <div class="section-header">
                            <h5 class="text-primary">
                                <i class="fas fa-info-circle"></i> Información Básica
                            </h5>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Codigo" class="form-label">Código</label>
                                    <input asp-for="Codigo" class="form-control" placeholder="Código único (opcional)" readonly />
                                    <span asp-validation-for="Codigo" class="text-danger"></span>
                                    <small class="form-text text-muted">El código no se puede modificar</small>
                                </div>
                            </div>
                            
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label asp-for="Nombre" class="form-label required-field">Nombre</label>
                                    <input asp-for="Nombre" class="form-control" required />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Descripcion" class="form-label">Descripción</label>
                                    <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Descripción del producto"></textarea>
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Precios y Márgenes -->
                        <div class="section-header">
                            <h5 class="text-primary">
                                <i class="fas fa-dollar-sign"></i> Precios y Márgenes
                            </h5>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="PrecioCosto" class="form-label">Precio Costo (sin IVA)</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="PrecioCosto" class="form-control" type="number" step="0.01" min="0" />
                                    </div>
                                    <span asp-validation-for="PrecioCosto" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="Precio" class="form-label required-field">Precio Venta (sin IVA)</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="Precio" class="form-control" type="number" step="0.01" min="0" required />
                                    </div>
                                    <span asp-validation-for="Precio" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label class="form-label">
                                        Margen %
                                        <i class="fas fa-info-circle text-muted" data-bs-toggle="tooltip" 
                                           title="Ingrese costo y margen para calcular precio, o costo y precio para ver margen"></i>
                                    </label>
                                    <div class="input-group">
                                        <input type="number" class="form-control" id="margenCalculado" 
                                               step="0.01" value="@margenInicial.ToString("F2")" />
                                        <span class="input-group-text">%</span>
                                    </div>
                                    <div id="margenDisplay" class="form-text"></div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-check mt-4">
                                    <input asp-for="Oferta" class="form-check-input" type="checkbox" />
                                    <label asp-for="Oferta" class="form-check-label">En Oferta</label>
                                </div>
                            </div>
                        </div>

                        <div class="row" id="precioOfertaRow" style="@(Model.Oferta ? "" : "display: none;")">
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="PrecioOferta" class="form-label">Precio Oferta</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="PrecioOferta" class="form-control" type="number" step="0.01" min="0" />
                                    </div>
                                    <span asp-validation-for="PrecioOferta" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Control de Inventario -->
                        <div class="section-header">
                            <h5 class="text-primary">
                                <i class="fas fa-warehouse"></i> Control de Inventario
                            </h5>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-check mb-3">
                                    <input asp-for="RequiereStock" class="form-check-input" type="checkbox" />
                                    <label asp-for="RequiereStock" class="form-check-label">Controlar Stock</label>
                                </div>
                            </div>

                            <div class="col-md-3" id="stockActualDiv" style="@(!Model.RequiereStock ? "display: none;" : "")">
                                <div class="mb-3">
                                    <label asp-for="Stock" class="form-label required-field">Stock Actual</label>
                                    <input asp-for="Stock" class="form-control" type="number" min="0" required />
                                    <span asp-validation-for="Stock" class="text-danger"></span>
                                    @if(Model.Stock <= Model.StockMinimo)
                                    {
                                        <div class="alert alert-warning mt-1 py-1 px-2">
                                            <small><i class="fas fa-exclamation-triangle"></i> Stock bajo el mínimo</small>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="col-md-3" id="stockMinimoDiv" style="@(!Model.RequiereStock ? "display: none;" : "")">
                                <div class="mb-3">
                                    <label asp-for="StockMinimo" class="form-label">Stock Mínimo</label>
                                    <input asp-for="StockMinimo" class="form-control" type="number" min="0" />
                                    <span asp-validation-for="StockMinimo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Clasificación -->
                        <div class="section-header">
                            <h5 class="text-primary">
                                <i class="fas fa-tags"></i> Clasificación
                            </h5>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Categoria" class="form-label">Categoría</label>
                                    <input asp-for="Categoria" class="form-control" list="categorias" />
                                    <datalist id="categorias">
                                        @if (ViewBag.Categorias != null)
                                        {
                                            @foreach (var categoria in ViewBag.Categorias as IEnumerable<string>)
                                            {
                                                <option value="@categoria">@categoria</option>
                                            }
                                        }
                                    </datalist>
                                    <span asp-validation-for="Categoria" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Marca" class="form-label">Marca</label>
                                    <input asp-for="Marca" class="form-control" list="marcas" />
                                    <datalist id="marcas">
                                        @if (ViewBag.Marcas != null)
                                        {
                                            @foreach (var marca in ViewBag.Marcas as IEnumerable<string>)
                                            {
                                                <option value="@marca">@marca</option>
                                            }
                                        }
                                    </datalist>
                                    <span asp-validation-for="Marca" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Proveedor" class="form-label">Proveedor</label>
                                    <input asp-for="Proveedor" class="form-control" list="proveedores" />
                                    <datalist id="proveedores">
                                        @if (ViewBag.Proveedores != null)
                                        {
                                            @foreach (var proveedor in ViewBag.Proveedores as IEnumerable<string>)
                                            {
                                                <option value="@proveedor">@proveedor</option>
                                            }
                                        }
                                    </datalist>
                                    <span asp-validation-for="Proveedor" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Información Física -->
                        <div class="section-header">
                            <h5 class="text-primary">
                                <i class="fas fa-weight"></i> Información Física
                            </h5>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Contenido" class="form-label">Contenido</label>
                                    <input asp-for="Contenido" class="form-control" placeholder="Ej: 500ml, 100g, etc." />
                                    <span asp-validation-for="Contenido" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Peso" class="form-label">Peso</label>
                                    <div class="input-group">
                                        <input asp-for="Peso" class="form-control" type="number" step="0.001" min="0" />
                                        <span class="input-group-text">kg</span>
                                    </div>
                                    <span asp-validation-for="Peso" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Información de Auditoría -->
                        <div class="card bg-light mb-3">
                            <div class="card-body py-2">
                                <small class="text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    @($"Creado: {Model.CreadoPor} - {Model.FechaCreacion:dd/MM/yyyy HH:mm}")
                                </small>
                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Volver
                                </a>
                                
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-save"></i> Actualizar Artículo
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/articulos-calculos.js"></script>
}

<style>
.required-field::after {
    content: " *";
    color: red;
}

.section-header {
    border-bottom: 2px solid #e3e6f0;
    padding-bottom: 0.5rem;
    margin-bottom: 1rem;
    margin-top: 1.5rem;
}

.section-header:first-child {
    margin-top: 0;
}
</style>