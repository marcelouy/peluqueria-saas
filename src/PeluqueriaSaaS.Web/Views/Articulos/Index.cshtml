@model IEnumerable<PeluqueriaSaaS.Domain.Entities.Articulo>

@{
    ViewData["Title"] = "Gestión de Artículos";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fas fa-box"></i> Gestión de Artículos
                    </h3>
                    <div>
                        <a asp-action="BajoStock" class="btn btn-warning me-2">
                            <i class="fas fa-exclamation-triangle"></i> Bajo Stock
                        </a>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Nuevo Artículo
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            <i class="fas fa-check-circle"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Código</th>
                                    <th>Nombre</th>
                                    <th>Categoría</th>
                                    <th>Marca</th>
                                    <th>Precio</th>
                                    <th>Stock</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@(item.Codigo ?? "N/A")</td>
                                        <td>@item.Nombre</td>
                                        <td>@(item.Categoria ?? "Sin categoría")</td>
                                        <td>@(item.Marca ?? "Sin marca")</td>
                                        <td>
                                            @if (item.Oferta && item.PrecioOferta.HasValue)
                                            {
                                                <span class="text-decoration-line-through text-muted">$@item.Precio.ToString("F2")</span>
                                                <br>
                                                <span class="text-danger fw-bold">$@item.PrecioOferta.Value.ToString("F2")</span>
                                                <small class="badge bg-danger">OFERTA</small>
                                            }
                                            else
                                            {
                                                <span>$@item.Precio.ToString("F2")</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.RequiereStock)
                                            {
                                                <span class="badge @(item.Stock <= item.StockMinimo ? "bg-danger" : "bg-success")">
                                                    @item.Stock
                                                </span>
                                                @if (item.Stock <= item.StockMinimo)
                                                {
                                                    <small class="text-danger">⚠️ Bajo</small>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">N/A</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge @(item.Activo ? "bg-success" : "bg-secondary")">
                                                @(item.Activo ? "Activo" : "Inactivo")
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Ver">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger" onclick="confirmarEliminacion(@item.Id, '@item.Nombre')" title="Eliminar">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        @if (!Model.Any())
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-box fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">No hay artículos registrados</h5>
                                <a asp-action="Create" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Crear primer artículo
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal confirmación eliminación -->
<div class="modal fade" id="modalEliminar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>¿Está seguro que desea eliminar el artículo <strong id="nombreArticulo"></strong>?</p>
                <p class="text-muted">Esta acción desactivará el artículo pero conservará el historial.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form id="formEliminar" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Eliminar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
function confirmarEliminacion(id, nombre) {
    document.getElementById('nombreArticulo').textContent = nombre;
    document.getElementById('formEliminar').action = '@Url.Action("Delete", "Articulos")/' + id;
    new bootstrap.Modal(document.getElementById('modalEliminar')).show();
}
</script>