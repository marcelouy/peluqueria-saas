@model PeluqueriaSaaS.Domain.Entities.Articulo

@{
    ViewData["Title"] = "Nuevo Artículo";
}

<link rel="stylesheet" href="~/css/articulos.css" />

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card">
                <div class="card-header articulos-header">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-plus"></i> Nuevo Artículo
                    </h3>
                </div>

                <form asp-action="Create" method="post" novalidate>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Información Básica -->
                        <div class="section-header">
                            <h5 class="text-primary">
                                <i class="fas fa-info-circle"></i> Información Básica
                            </h5>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Codigo" class="form-label">Código</label>
                                    <input asp-for="Codigo" class="form-control" placeholder="Ej: ART001" />
                                    <span asp-validation-for="Codigo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label asp-for="Nombre" class="form-label required-field">Nombre</label>
                                    <input asp-for="Nombre" class="form-control" placeholder="Ej: Champú Loreal 500ml" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Descripción detallada..."></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <!-- Pricing -->
                        <div class="section-header">
                            <h5 class="text-primary">
                                <i class="fas fa-dollar-sign"></i> Precios y Márgenes
                            </h5>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="PrecioCosto" class="form-label">Precio Costo (sin IVA)</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="PrecioCosto" class="form-control" type="number" step="0.01" />
                                    </div>
                                    <span asp-validation-for="PrecioCosto" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="Precio" class="form-label required-field">Precio Venta (sin IVA)</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="Precio" class="form-control" type="number" step="0.01" />
                                    </div>
                                    <span asp-validation-for="Precio" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label class="form-label">
                                        Margen %
                                        <i class="fas fa-info-circle text-muted" data-bs-toggle="tooltip" 
                                           title="Ingrese costo y margen para calcular precio, o costo y precio para ver margen"></i>
                                    </label>
                                    <div class="input-group">
                                        <input type="number" class="form-control" id="margenCalculado" step="0.01" />
                                        <span class="input-group-text">%</span>
                                    </div>
                                    <div id="margenDisplay" class="form-text"></div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-check mt-4">
                                    <input asp-for="Oferta" class="form-check-input" type="checkbox" />
                                    <label asp-for="Oferta" class="form-check-label">En oferta</label>
                                </div>
                            </div>
                        </div>

                        <div class="row" id="precioOfertaRow" style="display: none;">
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="PrecioOferta" class="form-label">Precio Oferta</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="PrecioOferta" class="form-control" type="number" step="0.01" />
                                    </div>
                                    <span asp-validation-for="PrecioOferta" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- SECCIÓN DE IMPUESTOS -->
                        <div class="section-header">
                            <h5 class="text-primary">
                                <i class="fas fa-percentage"></i> Impuestos Aplicables
                            </h5>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle"></i> Seleccione los impuestos que aplican a este artículo
                                </div>
                            </div>
                        </div>

                        <div id="impuestosContainer">
                            @{
                                var impuestosDisp = ViewBag.ImpuestosDisponibles as IEnumerable<dynamic>;
                                if (impuestosDisp != null && impuestosDisp.Any())
                                {
                                    <div class="alert alert-success">
                                        <i class="fas fa-check"></i> Se encontraron @impuestosDisp.Count() tipos de impuestos
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-danger">
                                        <i class="fas fa-times"></i> No se encontraron impuestos disponibles
                                    </div>
                                }
                            }
                            
                            @if (ViewBag.ImpuestosDisponibles != null)
                            {
                                @foreach (dynamic tipo in ViewBag.ImpuestosDisponibles)
                                {
                                    string tipoCodigo = tipo.TipoCodigo;
                                    string tipoNombre = tipo.TipoNombre;
                                    var tasas = tipo.Tasas as IEnumerable<dynamic>;
                                    
                                    <div class="card mb-3">
                                        <div class="card-header py-2">
                                            <h6 class="mb-0">@tipoNombre (Código: @tipoCodigo)</h6>
                                        </div>
                                        <div class="card-body">
                                            @if (tasas != null && tasas.Any())
                                            {
                                                <div class="row">
                                                    @foreach (dynamic tasa in tasas)
                                                    {
                                                        int tasaId = tasa.TasaId;
                                                        string tasaNombre = tasa.Nombre;
                                                        decimal tasaPorcentaje = tasa.Porcentaje;
                                                        bool esDefault = tasa.EsDefault;
                                                        
                                                        <div class="col-md-4">
                                                            <div class="form-check">
                                                                <input class="form-check-input impuesto-check" 
                                                                       type="@(tipoCodigo == "IVA" ? "radio" : "checkbox")"
                                                                       name="@(tipoCodigo == "IVA" ? "impuestoIVA" : "impuestosSeleccionados")"
                                                                       value="@tasaId"
                                                                       data-tipo="@tipoCodigo"
                                                                       data-porcentaje="@tasaPorcentaje"
                                                                       data-nombre="@tasaNombre"
                                                                       @(esDefault && tipoCodigo == "IVA" ? "checked" : "")
                                                                       id="tasa_@tasaId" />
                                                                <label class="form-check-label" for="tasa_@tasaId">
                                                                    @tasaNombre (@tasaPorcentaje%)
                                                                    @if (esDefault)
                                                                    {
                                                                        <span class="badge bg-primary">Por defecto</span>
                                                                    }
                                                                </label>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <p class="text-muted">No hay tasas disponibles para este tipo de impuesto</p>
                                            }
                                        </div>
                                    </div>
                                }

                                <!-- Hidden input para enviar el IVA seleccionado -->
                                <input type="hidden" name="impuestosSeleccionados" id="hiddenIVA" />
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    <i class="fas fa-exclamation-triangle"></i> No hay impuestos configurados en el sistema
                                </div>
                            }
                        </div>

                        <!-- Resumen de Precio con Impuestos -->
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6>Resumen de Precio Final</h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <table class="table table-sm">
                                            <tr>
                                                <td>Precio Venta (sin impuestos):</td>
                                                <td class="text-end"><strong>$<span id="precioBase">0.00</span></strong></td>
                                            </tr>
                                            <tr id="desgloseImpuestos">
                                                <!-- Se llenará dinámicamente -->
                                            </tr>
                                            <tr class="table-primary">
                                                <td><strong>Precio Final al Consumidor:</strong></td>
                                                <td class="text-end"><strong>$<span id="precioFinal">0.00</span></strong></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Inventario -->
                        <div class="section-header">
                            <h5 class="text-primary">
                                <i class="fas fa-warehouse"></i> Control de Inventario
                            </h5>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-check mb-3">
                                    <input asp-for="RequiereStock" class="form-check-input" type="checkbox" />
                                    <label asp-for="RequiereStock" class="form-check-label">Requiere control de stock</label>
                                </div>
                            </div>
                            <div class="col-md-3" id="stockActualDiv">
                                <div class="mb-3">
                                    <label asp-for="Stock" class="form-label">Stock Actual</label>
                                    <input asp-for="Stock" class="form-control" type="number" />
                                    <span asp-validation-for="Stock" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3" id="stockMinimoDiv">
                                <div class="mb-3">
                                    <label asp-for="StockMinimo" class="form-label">Stock Mínimo</label>
                                    <input asp-for="StockMinimo" class="form-control" type="number" />
                                    <span asp-validation-for="StockMinimo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Clasificación -->
                        <div class="section-header">
                            <h5 class="text-primary">
                                <i class="fas fa-tags"></i> Clasificación
                            </h5>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Categoria" class="form-label">Categoría</label>
                                    <input asp-for="Categoria" class="form-control" list="categoriasList" />
                                    <datalist id="categoriasList">
                                        @foreach (var categoria in ViewBag.Categorias as IEnumerable<string> ?? Enumerable.Empty<string>())
                                        {
                                            <option value="@categoria"></option>
                                        }
                                    </datalist>
                                    <span asp-validation-for="Categoria" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Marca" class="form-label">Marca</label>
                                    <input asp-for="Marca" class="form-control" list="marcasList" />
                                    <datalist id="marcasList">
                                        @foreach (var marca in ViewBag.Marcas as IEnumerable<string> ?? Enumerable.Empty<string>())
                                        {
                                            <option value="@marca"></option>
                                        }
                                    </datalist>
                                    <span asp-validation-for="Marca" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Proveedor" class="form-label">Proveedor</label>
                                    <input asp-for="Proveedor" class="form-control" list="proveedoresList" />
                                    <datalist id="proveedoresList">
                                        @foreach (var proveedor in ViewBag.Proveedores as IEnumerable<string> ?? Enumerable.Empty<string>())
                                        {
                                            <option value="@proveedor"></option>
                                        }
                                    </datalist>
                                    <span asp-validation-for="Proveedor" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Información Física -->
                        <div class="section-header">
                            <h5 class="text-primary">
                                <i class="fas fa-weight"></i> Información Física
                            </h5>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Contenido" class="form-label">Contenido</label>
                                    <input asp-for="Contenido" class="form-control" placeholder="Ej: 500ml" />
                                    <span asp-validation-for="Contenido" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Peso" class="form-label">Peso (kg)</label>
                                    <input asp-for="Peso" class="form-control" type="number" step="0.001" />
                                    <span asp-validation-for="Peso" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-primary" onclick="prepararEnvio(); this.form.submit(); return false;">
                                <i class="fas fa-save"></i> Guardar Artículo
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/articulos-calculos.js"></script>
    <script src="~/js/articulos-impuestos-dinamicos.js"></script>
    
    <script>
        // Función para preparar el envío del formulario
        function prepararEnvio() {
            // Copiar el valor del radio IVA seleccionado al hidden input
            var ivaSeleccionado = document.querySelector('input[name="impuestoIVA"]:checked');
            if (ivaSeleccionado) {
                document.getElementById('hiddenIVA').value = ivaSeleccionado.value;
                console.log('IVA seleccionado para envío:', ivaSeleccionado.value);
            }
            
            // Debug: ver todos los impuestos que se enviarán
            var impuestosSeleccionados = document.querySelectorAll('input[name="impuestosSeleccionados"]:checked');
            console.log('Otros impuestos seleccionados:', impuestosSeleccionados.length);
            
            return true;
        }
        
        // Disparar cálculo inicial cuando la página esté lista
        window.addEventListener('load', function() {
            if (typeof calcularPrecioConImpuestos === 'function') {
                calcularPrecioConImpuestos();
            }
        });
    </script>
}

<style>
.required-field::after {
    content: " *";
    color: red;
}

.section-header {
    border-bottom: 2px solid #e3e6f0;
    padding-bottom: 0.5rem;
    margin-bottom: 1rem;
    margin-top: 1.5rem;
}

.section-header:first-child {
    margin-top: 0;
}
</style>