<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PeluqueriaSaaS</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome para iconos -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">
    
    <!-- Select2 -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <!-- CSS UNIFICADO -->
    <link href="~/css/peluqueria-styles.css" rel="stylesheet" />
    
    <!-- CSS personalizado adicional -->
    <link href="~/css/site.css" rel="stylesheet" />
    
    <!-- CSS Mejoras Ventas -->
    <link href="~/css/ventas-mejoras.css" rel="stylesheet" />
    
    <!-- CSS Monitor -->
    <link rel="stylesheet" href="~/css/monitor.css" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Navbar principal REORGANIZADO -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="fas fa-cut me-2"></i>
                PeluqueriaSaaS
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <!-- INICIO -->
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="fas fa-home me-1"></i> Inicio
                        </a>
                    </li>
                    
                    <!-- VENTAS DROPDOWN -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="ventasDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-cash-register text-success me-1"></i> Ventas
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="/Ventas/POS">
                                    <i class="fas fa-shopping-cart text-success"></i> Punto de Venta (POS)
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/Ventas">
                                    <i class="fas fa-list"></i> Lista de Ventas
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/Caja">
                                    <i class="fas fa-money-bill-wave"></i> Caja
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="/Ventas/Reportes">
                                    <i class="fas fa-chart-bar"></i> Reportes de Ventas
                                </a>
                            </li>
                        </ul>
                    </li>
                    
                    <!-- GESTIÓN DROPDOWN -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="gestionDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-cogs me-1"></i> Gestión
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="/Clientes">
                                    <i class="fas fa-user-friends text-primary"></i> Clientes
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/Empleados">
                                    <i class="fas fa-id-badge text-info"></i> Empleados
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/Servicios">
                                    <i class="fas fa-cut text-warning"></i> Servicios
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/Articulos">
                                    <i class="fas fa-box text-success"></i> Artículos/Productos
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="/Estaciones">
                                    <i class="fas fa-desktop text-secondary"></i> Estaciones de Trabajo
                                </a>
                            </li>
                        </ul>
                    </li>
                    
                    <!-- REPORTES DROPDOWN -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="reportesDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-chart-line me-1"></i> Reportes
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="/Home/Dashboard">
                                    <i class="fas fa-tachometer-alt text-primary"></i> Dashboard
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/Ventas/Reportes">
                                    <i class="fas fa-file-invoice-dollar"></i> Reporte Ventas
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/Estaciones/Monitor">
                                    <i class="fas fa-tv"></i> Monitor Estaciones
                                </a>
                            </li>
                            <!-- Futuros reportes
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="/Reportes/Empleados">
                                    <i class="fas fa-user-chart"></i> Reporte Empleados
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/Home/Comisiones">
                                    <i class="fas fa-money-bill-wave text-success"></i> Comisiones
                                </a>
                            </li>
                            -->
                        </ul>
                    </li>
                    
                    <!-- CONFIGURACIÓN DROPDOWN -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="configDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-wrench me-1"></i> Configuración
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="/Settings">
                                    <i class="fas fa-sliders-h"></i> Configuración General
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/Settings/Comprobantes">
                                    <i class="fas fa-receipt"></i> Config. Comprobantes
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="/Impuestos">
                                    <i class="fas fa-percent"></i> Impuestos
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/TiposServicio">
                                    <i class="fas fa-tags"></i> Tipos de Servicio
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
                
                <!-- PARTE DERECHA DEL NAVBAR -->
                <ul class="navbar-nav ms-auto">
                    <!-- ACCESOS RÁPIDOS -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-warning" href="#" id="rapidoDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-star me-1"></i> Rápido
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item text-success fw-bold" href="/Ventas/POS">
                                    <i class="fas fa-plus-circle"></i> Nueva Venta
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/Clientes/Create">
                                    <i class="fas fa-user-plus"></i> Nuevo Cliente
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/Servicios/Create">
                                    <i class="fas fa-plus"></i> Nuevo Servicio
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="/Home/Dashboard">
                                    <i class="fas fa-chart-pie"></i> Ver Dashboard
                                </a>
                            </li>
                        </ul>
                    </li>
                    
                    <!-- INDICADOR DE ESTADO -->
                    <li class="nav-item">
                        <span class="nav-link text-success">
                            <i class="fas fa-circle"></i> Online
                        </span>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hidden divs para TempData (para toastr) -->
    @if (TempData["Success"] != null)
    {
        <div data-tempdata-success="@TempData["Success"]" style="display:none;"></div>
    }
    @if (TempData["Error"] != null)
    {
        <div data-tempdata-error="@TempData["Error"]" style="display:none;"></div>
    }
    @if (TempData["Warning"] != null)
    {
        <div data-tempdata-warning="@TempData["Warning"]" style="display:none;"></div>
    }
    @if (TempData["Info"] != null)
    {
        <div data-tempdata-info="@TempData["Info"]" style="display:none;"></div>
    }

    <!-- Contenido principal -->
    <main class="fade-in">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-6">
                    <h5>
                        <i class="fas fa-cut me-2"></i>
                        PeluqueriaSaaS
                    </h5>
                    <p class="text-muted">
                        Sistema de gestión integral para peluquerías profesionales
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="text-muted mb-0">
                        © @DateTime.Now.Year - Todos los derechos reservados
                    </p>
                    <p class="text-muted small">
                        Sistema al 95% funcional
                    </p>
                    <!-- Botón temporal para toggle admin -->
                    <button onclick="toggleAdminMode()" class="btn btn-sm btn-outline-secondary mt-2">
                        <i class="fas fa-user-shield"></i> Toggle Admin
                    </button>
                </div>
            </div>
        </div>
    </footer>
    
    <!-- Modal de Estadísticas -->
    <div class="modal fade" id="estadisticasModal" tabindex="-1" aria-labelledby="estadisticasModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="estadisticasModalLabel">
                        <i class="fas fa-chart-bar me-2"></i>Estadísticas
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="estadisticasContent">
                    <div class="text-center">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    
    <!-- Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    
    <!-- Configuración Toastr -->
    <script src="~/js/toastr-config.js"></script>
    
    <!-- Validación y preservación de ventas -->
    <script src="~/js/ventas-validacion.js"></script>
    
    <!-- Control de fecha por rol -->
    <script src="~/js/ventas-fecha-control.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>