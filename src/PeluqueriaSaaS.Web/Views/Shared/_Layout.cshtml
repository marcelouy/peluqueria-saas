<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PeluqueriaSaaS</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome para iconos -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">
    
    <!-- CSS UNIFICADO -->
    <link href="~/css/peluqueria-styles.css" rel="stylesheet" />
    
    <!-- CSS personalizado adicional -->
    <link href="~/css/site.css" rel="stylesheet" />
    
    <!-- CSS Mejoras Ventas -->
    <link href="~/css/ventas-mejoras.css" rel="stylesheet" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Navbar principal -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-cut me-2"></i>
                PeluqueriaSaaS
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="fas fa-home me-1"></i>
                            Inicio
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("POS", "Ventas")">
                            <i class="fas fa-cash-register text-success"></i>
                            POS
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Articulos" asp-action="Index">
                            <i class="fas fa-box"></i> Artículos
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Servicios">
                            <i class="fas fa-scissors me-1"></i>
                            Servicios
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Clientes">
                            <i class="fas fa-user-friends me-1"></i>
                            Clientes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Empleados">
                            <i class="fas fa-users me-1"></i>
                            Empleados
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hidden divs para TempData (para toastr) -->
    @if (TempData["Success"] != null)
    {
        <div data-tempdata-success="@TempData["Success"]" style="display:none;"></div>
    }
    @if (TempData["Error"] != null)
    {
        <div data-tempdata-error="@TempData["Error"]" style="display:none;"></div>
    }
    @if (TempData["Warning"] != null)
    {
        <div data-tempdata-warning="@TempData["Warning"]" style="display:none;"></div>
    }
    @if (TempData["Info"] != null)
    {
        <div data-tempdata-info="@TempData["Info"]" style="display:none;"></div>
    }

    <!-- Contenido principal -->
    <main class="fade-in">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-6">
                    <h5>
                        <i class="fas fa-cut me-2"></i>
                        PeluqueriaSaaS
                    </h5>
                    <p class="text-muted">
                        Sistema de gestión integral para peluquerías profesionales
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="text-muted mb-0">
                        © @DateTime.Now.Year - Todos los derechos reservados
                    </p>
                    <!-- Botón temporal para toggle admin -->
                    <button onclick="toggleAdminMode()" class="btn btn-sm btn-outline-secondary mt-2">
                        <i class="fas fa-user-shield"></i> Toggle Admin
                    </button>
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    
    <!-- Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    
    <!-- Configuración Toastr -->
    <script src="~/js/toastr-config.js"></script>
    
    <!-- Validación y preservación de ventas -->
    <script src="~/js/ventas-validacion.js"></script>
    
    <!-- Control de fecha por rol -->
    <script src="~/js/ventas-fecha-control.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>